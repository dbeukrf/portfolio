# Diego Portfolio Backend Environment Variables
# Copy this file to .env and update the values as needed

# Application Configuration
ENVIRONMENT=development
DEBUG=true
HOST=127.0.0.1
PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# API Configuration
API_VERSION=v1

# AI Chatbot Configuration (Required for chatbot functionality)
OPENAI_API_KEY=your_openai_api_key_here
# Optional: LangChain API key for tracing (not required for basic functionality)
# LANGCHAIN_API_KEY=your_langchain_api_key_here
# LANGCHAIN_TRACING_V2=true

# IP Geolocation Configuration
IPSTACK_KEY=your_ipstack_api_key_here
# Set to 'false' to disable the geolocation feature entirely
# When disabled, the /api/geo endpoint will return an error
ENABLE_GEOLOCATION=true

# Database Configuration (for future use)
# DATABASE_URL=sqlite:///./portfolio.db
# DATABASE_ECHO=false

# Logging Configuration
# LOG_LEVEL=INFO
# LOG_FORMAT=json
